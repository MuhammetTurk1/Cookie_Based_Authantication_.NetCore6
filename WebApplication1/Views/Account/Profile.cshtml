@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div class="col-4 offset-4">
        <div class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</div>
  </div>
</div>
<div class="row mt-4">
    <div class="col-4">
        <div class="mb-4">
            <div asp-validation-summary="All" class="text-danger small"></div>
        </div>
        
        <form method="post" asp-action="ProfileChangeFullName">
            <div class="form-group">
                 <label class="form-label small">Name Surname</label>
             <div class="input-group mb-3">
                    <input name="fullname" type="text" class="form-control" placeholder="Jhon Due" value="@ViewData["NameSurname"]">
                <button class="btn btn-secondary" type="submit" id="button-addon2"><i class="fa-solid fa-floppy-disk me-2"></i>Save</button>
            </div>
            </div>
        </form>
        <form method="post" asp-action="ProfileChangePassword">
            <div class="form-group">
                <label class="form-label small">New Password</label>
                <div class="input-group mb-3">
                    <input name="password" type="password" class="form-control" placeholder="P@ssW0rd!" >
                    <button class="btn btn-secondary" type="submit" id="button-addon2"><i class="fa-solid fa-floppy-disk me-2"></i>Save</button>
                </div>
           
                    @if(ViewData["result"] != null && ViewData["result"]=="PasswordChanged" )
                    {
                    <span class="text-success small">Password Updated</span>
                    }
                
            </div>
        </form>
    </div>
</div>